<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorAccent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorAccent"
        android:theme="?android:toolbarStyle"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:navigationIcon="@drawable/ic_back"
            app:navigationIcon="@drawable/ic_back"
            app:popupTheme="?android:toolbarStyle"
            app:theme="?android:toolbarStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbarTitle"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/profile"
                android:textColor="?android:textColorPrimaryInverse"
                android:textStyle="bold"
                app:fontFamily="@font/abeezee"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/spacing_s_large"
                    android:layout_marginStart="@dimen/spacing_s_large"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:background="@drawable/bottom_sheet_background"
                    android:elevation="@dimen/spacing_normal"
                    android:orientation="vertical"
                    android:outlineProvider="background"
                    android:paddingBottom="@dimen/spacing_xlarge">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/username"
                        style="@style/TextAppearance.MaterialComponents.Headline5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xlarge"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large"
                        app:autoSizeMaxTextSize="24sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        tools:text="K0shk0sh"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/name"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large"
                        android:visibility="visible"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        tools:text="K0shk0sh"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/following"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_normal"
                            android:layout_weight="1"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:maxLines="1"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"
                            tools:text="Following (10000)"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/followers"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackground"
                            android:gravity="center"
                            android:maxLines="1"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"
                            tools:text="Followers (1000))"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/actionsHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_xs_large"
                        android:background="@drawable/top_border"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/followBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/spacing_xs_large"
                            android:text="@string/follow"
                            app:icon="@drawable/ic_add"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/blockBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/block"
                            android:visibility="visible"
                            app:icon="@drawable/ic_block"
                            tools:visibility="visible"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/aboutSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs_large"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_normal"
                            android:drawableStart="@drawable/ic_info_outline"
                            android:gravity="center|start"
                            android:text="@string/about"
                            android:textStyle="bold"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/description"
                            style="@style/TextAppearance.MaterialComponents.Body2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_micro"
                            android:textStyle="normal"
                            tools:text="Cook smooth squids in a wok with fish sauce for about an hour to enhance their tartness.Sunt tabeses promissio noster, grandis zeluses."/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/company"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@drawable/bottom_border"
                        android:drawablePadding="@dimen/spacing_micro"
                        android:drawableStart="@drawable/ic_group"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/spacing_normal"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large"
                        android:paddingTop="@dimen/spacing_normal"
                        android:textStyle="normal"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        tools:text="Company"
                        tools:visibility="visible"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/location"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@drawable/bottom_border"
                        android:drawablePadding="@dimen/spacing_micro"
                        android:drawableStart="@drawable/ic_location"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/spacing_normal"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large"
                        android:paddingTop="@dimen/spacing_normal"
                        android:textStyle="normal"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        tools:text="Dresden, Germany"
                        tools:visibility="visible"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/email"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:autoLink="email"
                        android:background="@drawable/bottom_border"
                        android:drawablePadding="@dimen/spacing_micro"
                        android:drawableStart="@drawable/ic_group"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/spacing_normal"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large"
                        android:paddingTop="@dimen/spacing_normal"
                        android:textStyle="normal"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        tools:text="example@gmail.com"
                        tools:visibility="visible"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/joined"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@drawable/bottom_border"
                        android:drawablePadding="@dimen/spacing_micro"
                        android:drawableStart="@drawable/ic_time"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/spacing_normal"
                        android:paddingEnd="@dimen/spacing_xs_large"
                        android:paddingStart="@dimen/spacing_xs_large"
                        android:paddingTop="@dimen/spacing_normal"
                        android:textStyle="normal"
                        android:visibility="gone"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeStepGranularity="2sp"
                        app:autoSizeTextType="uniform"
                        tools:text="Aug 5, 2011"
                        tools:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/organizationHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs_large"
                        android:background="@drawable/bottom_border"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_normal"
                            android:drawableStart="@drawable/ic_group"
                            android:gravity="center|start"
                            android:paddingEnd="@dimen/spacing_xs_large"
                            android:paddingStart="@dimen/spacing_xs_large"
                            android:text="@string/organizations"
                            android:textStyle="bold"/>

                        <com.jaychang.srv.SimpleRecyclerView
                            android:id="@+id/organizationList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_micro"
                            android:paddingEnd="@dimen/spacing_normal"
                            android:paddingStart="@dimen/spacing_normal"
                            app:srv_gridSpanCount="1"
                            app:srv_layoutMode="linearHorizontal"
                            app:srv_snappy="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pinnedHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs_large"
                        android:background="@drawable/bottom_border"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_normal"
                            android:drawableStart="@drawable/ic_pin"
                            android:paddingEnd="@dimen/spacing_xs_large"
                            android:paddingStart="@dimen/spacing_xs_large"
                            android:text="@string/pinned"
                            android:textStyle="bold"/>

                        <com.jaychang.srv.SimpleRecyclerView
                            android:id="@+id/pinnedList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_micro"
                            app:srv_layoutMode="linearVertical"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/userImageView"
                    android:layout_width="@dimen/header_icon_zie"
                    android:layout_height="@dimen/header_icon_zie"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/spacing_xs_large"
                    android:background="@color/transparent"
                    android:src="@mipmap/ic_launcher"
                    android:translationZ="9dp"/>
            </FrameLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>